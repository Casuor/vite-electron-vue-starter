{
  "name": "electron-vue-starter",
  "author": "aki",
  "description": "electron vue starter",
  "private": true,
  "version": "1.0.0",
  "main": "dist/.electron/main.js",
  "scripts": {
    "dev": "kill-port 3000 && concurrently -k \"vite\" \"wait-on tcp:3000 && npm-run-all watch\"",
    "watch": "tsc-watch --noClear -p tsconfig.electron.json --onSuccess \"npm-run-all start\"",
    "start": "cross-env NODE_ENV=development electron ./dist/.electron/main.js",
    "render:dev": "vite",
    "main:dev": "electron .",
    "build": "npm-run-all build:vue build:tsc build:all",
    "build:vue": "vue-tsc --noEmit && vite build",
    "build:tsc": "tsc -p tsconfig.electron.json",
    "build:all": "electron-builder --mac --win --linux --publish always",
    "preview": "vite preview"
  },
  "dependencies": {
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@babel/types": "^7.18.10",
    "@headlessui/vue": "^1.6.7",
    "@heroicons/vue": "^1.0.6",
    "@vitejs/plugin-vue": "^2.3.3",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "electron": "^17.4.11",
    "electron-builder": "^23.3.3",
    "kill-port": "^1.6.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.7",
    "tsc-watch": "^4.6.2",
    "typescript": "^4.7.4",
    "vite": "^2.9.14",
    "vue-tsc": "^0.39.4",
    "wait-on": "^6.0.1"
  }
}
